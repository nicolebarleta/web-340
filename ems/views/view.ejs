<!DOCTYPE html>
<html lang="en">
  <%- include ("header") %>

  <body>
    <%- include ("navbar") %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />

      <h2>Employee Record</h2>
      <br />
      <div>
        <div class="form-group">
          <label for="txtName">Employee First Name:</label>
          <input
            type="text"
            class="form-control"
            id="txtName"
            readonly
            value="<%= employee[0].firstName %>"
            name="txtName"
          />
        </div>

        <div class="form-group">
          <label for="txtName">Employee Last Name:</label>
          <input
            type="text"
            class="form-control"
            id="txtName"
            readonly
            value="<%= employee[0].lastName %>"
            name="txtName"
          />
        </div>

        <div class="form-group">
          <label for="txtName">Employee Job Title:</label>
          <input
            type="text"
            class="form-control"
            id="txtName"
            readonly
            value="<%= employee[0].title %>"
            name="txtName"
          />
        </div>
      </div>

      <br /><br />

      <a href="/list">&larr; Done</a>
    </div>
    <%- include ("footer") %>
    <%- include ("scripts") %>
  </body>
</html>
